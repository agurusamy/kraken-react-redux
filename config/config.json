
{
  "express": {
    "view engine": "jsx",
    "view": "require:react-engine/lib/expressView",
    "view cache": false,
    "views": "path:./build"
  },

  "view engines": {
      "jsx": {
          "module": "react-engine/lib/server",
          "renderer": {
            "method": "create",
              "arguments": [{
                  "routes": "require:./build/routes",
                  "routesFilePath": "path:./build/routes",
                  "reduxStoreInitiator": "path:./build/store"
              }]
          }
      }
  },

  "middleware": {
    "static": {
      "enabled": true,
      "priority": 40,
      "name": "serve-static",
      "module": {
          "arguments": ["path:./build/public"]
      },
      "router": {
        "module": {
          "arguments": [{"directory": "path:./routes"}]
        }
      }
  }
}
